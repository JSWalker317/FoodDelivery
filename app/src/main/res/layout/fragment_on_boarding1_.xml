<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding1_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_boading1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_boarding1" />

        <com.rd.PageIndicatorView
            android:id="@+id/indicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_boading1"
            android:layout_centerInParent="true"
            android:padding="12dp"
            app:piv_animationType="scale"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_radius="8dp"
            app:piv_selectedColor="#FE724C"
            app:piv_unselectedColor="#ADEF8F74"
            app:piv_viewPager="@id/viewpager_board" />

        <TextView
            android:id="@+id/tv_boarding1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator1"
            android:text="Browse your menu"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_boarding1"
            android:layout_margin="10dp"
            android:text="Our app can send you everywhere, even space. For only $2.99 per month"
            android:textAlignment="center" />
    </RelativeLayout>


</FrameLayout>